pipeline {
    agent any

    stages {
        stage('Pack Velen Top') {
            when {
                changeset "src/hak/velen_top/*"
            }
            steps {
                echo 'Packing Velen top'
                 script {
                    sh "docker run --rm -t -v \$(pwd):/nasher -v \$(pwd):/nasher urothis/nwnee-community-images:nasher-8193.34 pack velen_top --clean --verbose --yes"
                }
            }
        }
        stage('Pack Velen Tiles8') {
            when {
                changeset "src/hak/velen_tiles8/*"
            }
            steps {
